<UserControl x:Class="ISDP2025_Parfonov_Zerrou.Forms.AdminUserControls.LocationControl"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
           xmlns:local="clr-namespace:ISDP2025_Parfonov_Zerrou.Forms.AdminUserControls"
           mc:Ignorable="d" Height="672" Width="900">

    <UserControl.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="1.1" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="1.1" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="1" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="1" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Location Management" 
                 FontSize="24" 
                 FontWeight="Bold" 
                 Margin="0,0,0,10"
                 Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
            <Label Content="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtSearch" Width="200" Margin="0,0,10,0" Height="22"
                   TextChanged="TxtSearch_TextChanged" Cursor="Pen"/>
            <Label Content="Province:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbSearchProvince" Width="150" Margin="0,0,10,0" Height="22"
                    SelectionChanged="CmbSearchProvince_SelectionChanged"
                    DisplayMemberPath="ProvinceName"
                    SelectedValuePath="ProvinceId"
                    IsEditable="True"
                    IsReadOnly="True" 
                    Cursor="Hand"/>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="Location Information" Padding="5" Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
                </Grid.RowDefinitions>

                <Label Content="Site ID:" Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
                <Label x:Name="lblSiteId" Grid.Row="0" Grid.Column="1" Margin="2" FontWeight="Bold"/>

                <Label Content="Site Name:" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="txtSiteName" Grid.Row="1" Grid.Column="1" Margin="2" Height="22" Cursor="Pen"/>

                <Label Content="Address:" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="txtAddress" Grid.Row="2" Grid.Column="1" Margin="2" Height="22" Cursor="Pen"/>

                <Label Content="Address 2:" Grid.Row="3" Grid.Column="0"/>
                <TextBox x:Name="txtAddress2" Grid.Row="3" Grid.Column="1" Margin="2" Height="22" Cursor="Pen"/>

                <Label Content="City:" Grid.Row="4" Grid.Column="0"/>
                <TextBox x:Name="txtCity" Grid.Row="4" Grid.Column="1" Margin="2" Height="22" Cursor="Pen"/>

                <Label Content="Province:" Grid.Row="5" Grid.Column="0"/>
                <ComboBox x:Name="cmbProvince" Grid.Row="5" Grid.Column="1" Margin="2" Height="22"
                       DisplayMemberPath="ProvinceName"
                       SelectedValuePath="ProvinceId"
                       IsEditable="True"
                       IsReadOnly="True" 
                       Cursor="Hand"/>

                <Label Content="Country:" Grid.Row="1" Grid.Column="2"/>
                <ComboBox x:Name="cmbCountry" Grid.Row="1" Grid.Column="3" Margin="2" Height="22"
                       IsEditable="True"
                       IsReadOnly="True" 
                       Cursor="Hand"/>

                <Label Content="Postal Code:" Grid.Row="2" Grid.Column="2"/>
                <TextBox x:Name="txtPostalCode" Grid.Row="2" Grid.Column="3" Margin="2" Height="22" Cursor="Pen"/>

                <Label Content="Phone:" Grid.Row="3" Grid.Column="2"/>
                <TextBox x:Name="txtPhone" Grid.Row="3" Grid.Column="3" Margin="2" Height="22" Cursor="Pen"/>

                <Label Content="Day of Week:" Grid.Row="4" Grid.Column="2"/>
                <ComboBox x:Name="cmbDayOfWeek" Grid.Row="4" Grid.Column="3" Margin="2" Height="22"
                       IsEditable="True"
                       IsReadOnly="True"
                       Cursor="Hand"/>

                <Label Content="Distance:" Grid.Row="5" Grid.Column="2"/>
                <TextBox x:Name="txtDistanceFromWH" Grid.Row="5" Grid.Column="3" Margin="2" Height="22" Cursor="Pen"/>

                <Label Content="Notes:" Grid.Row="6" Grid.Column="2"/>
                <TextBox x:Name="txtNotes" Grid.Row="6" Grid.Column="3" Margin="2" Height="22"
                       TextWrapping="Wrap" AcceptsReturn="True" Cursor="Pen"/>

                <Label Content="Active:" Grid.Row="7" Grid.Column="2"/>
                <CheckBox x:Name="chkActive" Grid.Row="7" Grid.Column="3" Margin="5,7,0,0" 
                        VerticalAlignment="Center" IsChecked="True" Click="ChkActive_Click" Cursor="Pen"/>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="3" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnRefresh" Content="Refresh" Width="100" Height="30" 
                  Grid.Column="0"
                  Click="BtnRefresh_Click"
                  Style="{StaticResource RoundedButton}"
                  Background="#2196F3"
                  Foreground="White" Cursor="Hand"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button x:Name="btnClear" Content="Clear" Width="100" Height="30" 
                      Margin="0,0,10,0" Click="BtnClear_Click"
                      Style="{StaticResource RoundedButton}"
                      Background="#FFF62D2D"
                      Foreground="White" Cursor="Hand"/>
                <Button x:Name="btnAdd" Content="Add" Width="100" Height="30" 
                      Margin="0,0,10,0" Click="BtnAdd_Click"
                      Style="{StaticResource RoundedButton}"
                      Background="#4CAF50"
                      Foreground="White" Cursor="Hand"/>
                <Button x:Name="btnUpdate" Content="Update" Width="100" Height="30" 
                      Margin="0,0,10,0" Click="BtnUpdate_Click"
                      Style="{StaticResource RoundedButton}"
                      Background="#FFD700"
                      Foreground="Black" Cursor="Hand"/>
                <Button x:Name="btnSave" Content="Save/Cancel" Width="100" Height="30" 
                      Click="BtnSave_Click"
                      Style="{StaticResource RoundedButton}"
                      Background="#4CAF50"
                      Foreground="White" Cursor="Hand"
                      Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <DataGrid x:Name="dgvLocations" 
                Grid.Row="4" 
                AutoGenerateColumns="False" 
                IsReadOnly="True"
                SelectionMode="Single"
                SelectionChanged="DgLocations_SelectionChanged"
                Margin="0,5,0,0">
            <DataGrid.Style>
                <Style TargetType="DataGrid">
                    <Style.Triggers>
                        <Trigger Property="HasItems" Value="False">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <TextBlock Text="Click Refresh to load locations" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontStyle="Italic"
                                               Foreground="Gray"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Style>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding SiteId}" Width="40">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Site Name" Binding="{Binding SiteName}" Width="*"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                <DataGridTextColumn Header="City" Binding="{Binding City}" Width="90"/>
                <DataGridTextColumn Header="Province" Binding="{Binding ProvinceName}" Width="80"/>
                <DataGridTextColumn Header="Postal Code" Binding="{Binding PostalCode}" Width="80"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="90"/>
                <DataGridTextColumn Header="Day" Binding="{Binding DayOfWeek}" Width="80"/>
                <DataGridTextColumn Header="Active" Binding="{Binding Active}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="lblRecordCount" 
                 Grid.Row="5" 
                 Margin="0,2,0,0"
                 HorizontalAlignment="Right"
                 FontStyle="Italic"
                 Foreground="Gray"/>
    </Grid>
</UserControl>