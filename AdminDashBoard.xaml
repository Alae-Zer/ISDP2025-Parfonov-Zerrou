<Window x:Class="ISDP2025_Parfonov_Zerrou.AdminDashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    Title="Dashboard - Bullseye IMS"
    Width="1200" Height="800"
    Background="#F7F7F7"
    WindowStartupLocation="CenterScreen"
    MinWidth="1200" MinHeight="800">


    <!-- Resources -->
    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFBF0E0E"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Foreground" Value="#FFE2E2E2" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="2,2,2,2" Background="#FF867F7F" BorderBrush="Black" BorderThickness="1,1,1,1">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <!-- Generic Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FF521A9A" />
        </Style>

        <!-- Sidebar Label Style -->
        <Style x:Key="SidebarLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#FFD0DA1C" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="./icons/#Font Awesome 6 Free Solid" />
            <Setter Property="Margin" Value="10,0,10,0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="30" />
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Sidebar -->
        <DockPanel>
            <StackPanel Background="#333" Width="250" DockPanel.Dock="Left" VerticalAlignment="Stretch">
                <!-- Logo -->
                <StackPanel Margin="10" VerticalAlignment="Top" Height="140">
                    <Image Source="/bullseye.png" Width="126" Height="100" HorizontalAlignment="Center" Stretch="UniformToFill" />
                    <TextBlock Text="Bullseye IMS" Foreground="White" FontWeight="Bold" 
                               FontSize="20" TextAlignment="Center" Margin="0,12,0,0" />
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Margin="10,10,10,86">
                    <!-- Dashboard Button -->
                    <Button Tag="DashboardPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" FontFamily="./icons/#Font Awesome 6 Free Solid" Content="&#xf0db;"/>
                            <TextBlock  Text="Dashboard" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Employees Button -->
                    <Button Tag="EmployeesPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf0c0;" Width="32" Height="30" Margin="10,0,10,0" FontSize="17" />
                            <TextBlock Text="Employees"  VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Locations Button -->
                    <Button Tag="LocationsPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf3c5;"/>
                            <TextBlock Text="Locations"  VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Inventory Button -->
                    <Button Tag="InventoryPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf468;"/>
                            <TextBlock Text="Inventory" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Suppliers Button -->
                    <Button Tag="SuppliersPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf275;"/>
                            <TextBlock Text="Suppliers" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Permissions Button -->
                    <Button Tag="PermissionsPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf4ff;"/>
                            <TextBlock Text="Permissions" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Footer -->
                <DockPanel LastChildFill="True" Margin="10" VerticalAlignment="Stretch">
                    <StackPanel DockPanel.Dock="Bottom" Margin="0,20,0,0" VerticalAlignment="Bottom">
                        <!-- User Label -->
                        <TextBlock Text="Logged in as: [Current User]" Foreground="White" FontSize="14" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5" />

                        <!-- Logout Button -->
                        <Button Tag="Logout" Height="42" 
                                Style="{StaticResource SidebarButtonStyle}" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf2f5;"/>
                                <TextBlock Text="Logout" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </StackPanel>

            <!-- Main Content -->
            <Grid Background="White" Margin="0">
                <ContentControl x:Name="MainContent" >
                    <Label Content="Label" HorizontalAlignment="Left" Margin="224,472,0,0" VerticalAlignment="Top"/>
                </ContentControl>
                <Button Content="Big button" FontSize="72" RenderTransformOrigin="1,0" Width="392" Height="300" Margin="454,394,104,90" >
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="2"/>
                            <SkewTransform/>
                            <RotateTransform Angle="31.322"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </Grid>
        </DockPanel>
    </Grid>

</Window>
