<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Primitives="clr-namespace:Microsoft.Windows.Controls.Primitives;assembly=HandyControl" 
    x:Class="ISDP2025_Parfonov_Zerrou.Forms.AdminUserControls.CreateStoreOrder"
    mc:Ignorable="d" 
    Unloaded="UserControl_Unloaded"  
    SizeChanged="UserControl_SizeChanged">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Controls -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Store Selection -->
                <hc:ComboBox Grid.Column="0" Margin="5,5,5,5" x:Name="cmbStores" 
                             hc:TitleElement.Title="Store Location:"
                             hc:InfoElement.Necessary="True" 
                             DisplayMemberPath="SiteName" 
                             hc:InfoElement.Symbol="*"
                             SelectedValuePath="SiteID" 
                             SelectionChanged="StoreComboBox_SelectionChanged"/>

                <!-- Order Type -->
                <StackPanel Grid.Column="1" Margin="35,10,5,5" x:Name="radio">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Order Type:"/>
                        <TextBlock Text="*" Foreground="Red" Margin="2,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <RadioButton Content="Normal" Margin="0,0,10,0" x:Name="radNormal"/>
                        <RadioButton Content="Emergency" x:Name="radEmergency"/>
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Column="2" Margin="5,0" Height="33" HorizontalAlignment="Right" x:Name="Alert" Visibility="Hidden">
                    <hc:Card>
                        <hc:SimplePanel>
                            <Border Background="#c82121" CornerRadius="4">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Border.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation 
                                                    Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                    From="Red" To="DarkOrange" Duration="0:0:0.6" 
                                                    AutoReverse="True" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                            <TextBlock Text="EMERGENCY ORDER" FontSize="15" FontWeight="Bold" Foreground="White"
                                      HorizontalAlignment="Right" VerticalAlignment="Center" Margin="8,2,10,0" Height="23"/>
                        </hc:SimplePanel>
                    </hc:Card>
                </Grid>

                <!-- Supplier Order Alert -->
                <Grid Grid.Column="2" Margin="5,0" Height="33" HorizontalAlignment="Right" x:Name="SupplierAlert" Visibility="Collapsed">
                    <hc:Card>
                        <hc:SimplePanel>
                            <Border Background="#1976D2" CornerRadius="4"/>
                            <TextBlock Text="SUPPLIER ORDER" FontSize="15" FontWeight="Bold" Foreground="White"
                                      HorizontalAlignment="Right" VerticalAlignment="Center" Margin="8,2,10,0" Height="23"/>
                        </hc:SimplePanel>
                    </hc:Card>
                </Grid>
            </Grid>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="2" x:Name="all1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Inventory Items -->
            <DockPanel Grid.Column="0">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,3" x:Name="inventoryTopPanel">
                    <TextBox x:Name="SearchBox" 
                            hc:InfoElement.Placeholder="Search Inventory..."
                            hc:TitleElement.Title="Inventory Items"
                            Style="{StaticResource TextBoxExtend}"
                            TextChanged="SearchBox_TextChanged"/>

                    <!-- Supplier Selection (initially hidden) -->
                    <hc:ComboBox x:Name="cmbSuppliers" 
                                Visibility="Collapsed"
                                Margin="0,2,0,5"
                                hc:InfoElement.Placeholder="Select Supplier"
                                DisplayMemberPath="SupplierName" 
                                SelectedValuePath="SupplierId"
                                SelectionChanged="CmbSuppliers_SelectionChanged"/>

                    <hc:Pagination x:Name="InventoryPagination" 
                                  PageIndex="1"
                                  MaxPageCount="1"
                                  PageUpdated="InventoryPagination_PageUpdated" Margin="0,5,0,1"/>
                </StackPanel>
                <DataGrid x:Name="InventoryGrid" 
                         AutoGenerateColumns="False"
                        
                         CanUserAddRows="False" 
                         RowHeight="36"
                         SelectionMode="Single"
                         IsReadOnly="True" MouseDoubleClick="InventoryGrid_MouseDoubleClick">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                 TextWrapping="Wrap"
                                                 TextAlignment="Center"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                          Binding="{Binding ItemId}" 
                                          Width="SizeToHeader"
                                          MinWidth="40"/>

                        <DataGridTemplateColumn Header="Name" Width="*" MinWidth="227">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" 
                                             TextTrimming="CharacterEllipsis">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" 
                                                             FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                             TextWrapping="Wrap" 
                                                             MaxWidth="300"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Supplier column (added dynamically in code) -->

                        <DataGridTextColumn Header="Store Quantity" 
                                          Binding="{Binding Quantity}" 
                                          Width="SizeToHeader"
                                          MinWidth="57"/>

                        <DataGridTextColumn Header="Case Size" 
                                          Binding="{Binding CaseSize}" 
                                          Width="SizeToHeader"
                                          MinWidth="40"/>

                        <DataGridTextColumn Header="Reorder Level" 
                                          Binding="{Binding ReorderThreshold}" 
                                          Width="SizeToHeader"
                                          MinWidth="53"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>

            <!-- Transfer Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="7">
                <Button x:Name="btnAdd" Content="-&gt;" ToolTip="Add selected item to order"
                        Style="{StaticResource ButtonPrimary}" Margin="5" Click="btnAdd_Click"/>

                <Button x:Name="btnRemove" Content="&lt;-" ToolTip="Remove selected item from order"
                        Style="{StaticResource ButtonPrimary}" Margin="5" Click="btnRemove_Click"/>
            </StackPanel>

            <!-- Order Items -->
            <DockPanel Grid.Column="2">
                <TextBox hc:InfoElement.Placeholder="Search Order..."
                         hc:TitleElement.Title="Order Items"
                         Style="{StaticResource TextBoxExtend}"
                         Margin="0,0,0,5"
                         DockPanel.Dock="Top"/>
                <DataGrid x:Name="dgvOrders" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          IsReadOnly="True" MouseDoubleClick="dgvOrders_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ItemId}" Width="41"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTemplateColumn Header="Quantity" Width="58">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <hc:NumericUpDown x:Name="nmpQuantity" Value="{Binding OrderQuantity}"
                                                     Minimum="{Binding CaseSize}"
                                                     Increment="{Binding CaseSize}"
                                                     IsReadOnly="False" ValueChanged="nupQuantity_ValueChanged"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Case Size" Binding="{Binding CaseSize}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Grid>

        <!-- Top Buttons -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,7,0,3">
            <Button x:Name="btnCreate" Content="Create" Margin="0" ToolTip="Create a new order with the current selections"
                   Style="{StaticResource ButtonWarning}" HorizontalAlignment="Right" Width="150" Height="33" Click="btnCreate_Click"/>

            <Button x:Name="btnRefresh" Content="Refresh" Style="{StaticResource ButtonDefault}" ToolTip="Refresh the inventory data"
                   Margin="5,0" Click="btnRefresh_Click" Width="80" Height="33" Background="#FFC8BCDE" BorderBrush="#FFC8BCDE"/>
        </StackPanel>

        <!-- Bottom Buttons -->
        <Button x:Name="btnBack" Content="Go back" Grid.Row="3" Style="{StaticResource ButtonDefault}"
               Margin="10,0,0,3" Click="btnBack_Click" Width="80" Height="33" Background="#FFC8BCDE" BorderBrush="#FFC8BCDE" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>

        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,8,0,3" x:Name="all2">
            <Button x:Name="btnCancel" Content="Cancel" ToolTip="Cancel the current order"
                   Style="{StaticResource ButtonDanger}" Margin="5,0" Width="80" Height="33" Click="btnCancel_Click"/>

            <Button x:Name="btnSave" Content="Save" Margin="5,0" ToolTip="Save the current order without submitting" 
                   Style="{StaticResource ButtonPrimary}" Click="btnSave_Click" Width="80" Height="33"/>

            <Button x:Name="btnSubmit" Content="Submit" ToolTip="Submit the order to the warehouse for processing"
                   Style="{StaticResource ButtonSuccess}" Click="btnSubmit_Click" Width="80" Height="33"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Right">
            <StackPanel hc:Growl.Token="SuccessMsg" VerticalAlignment="Top" Margin="0,10,10,10"/>
        </ScrollViewer>
    </Grid>
</UserControl>