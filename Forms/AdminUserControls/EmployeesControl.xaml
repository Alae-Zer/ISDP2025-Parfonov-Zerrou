<UserControl x:Class="ISDP2025_Parfonov_Zerrou.Forms.AdminUserControls.EmployeesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ISDP2025_Parfonov_Zerrou.Forms.AdminUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <TextBlock Text="Employee Management" 
               FontSize="24" 
               FontWeight="Bold" 
               Margin="0,0,0,20"/>

        <!-- Employee Form -->
        <GroupBox Grid.Row="1" Padding="10" Margin="0,0,0,10" x:Name="employeeFormGroup">
            <GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Employee Information" VerticalAlignment="Center"/>
                </Grid>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="57*"/>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Left Column Labels -->
                <Label Content="First Name:" Grid.Row="0" Grid.Column="0"/>
                <Label Content="Last Name:" Grid.Row="1" Grid.Column="0"/>
                <Label Content="Location:" Grid.Row="3" Grid.Column="0"/>
                <Label Content="Position:" Grid.Row="2" Grid.Column="0"/>
                <Label Content="Notes:" Grid.Row="4" Grid.Column="0"/>

                <!-- Left Column Controls -->
                <TextBox x:Name="txtFirstName" Grid.Row="0" Grid.Column="1" Margin="6" TextChanged="txtFirstName_TextChanged" ToolTip="Enter the employee first name"/>
                <TextBox x:Name="txtLastName" Grid.Row="1" Grid.Column="1" Margin="5" TextChanged="txtLastName_TextChanged" ToolTip="Enter the employee last name" />
                <ComboBox x:Name="cmbLocation" Grid.Row="3" Grid.Column="1" Margin="5" ToolTip="Choose the Location of the employee"/>
                <ComboBox x:Name="cmbPosition" Grid.Row="2" Grid.Column="1" Margin="5" ToolTip="Choose the Permition of the employee"/>
                <TextBox x:Name="Notes" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" TextWrapping="Wrap" AcceptsReturn="True" Height="48" Margin="5,0,5,0" ToolTip="Add any notes to the employee account"/>

                <!-- Right Column Labels -->
                <Label Content="Username:" Grid.Row="1" Grid.Column="2" Margin="4,0,0,0"/>
                <Label Content="Password:" Grid.Row="2" Grid.Column="2" Margin="4,0,0,0"/>
                <Label FontFamily="../../icons/#Font Awesome 6 Free Solid"  Content="&#xe2ca;" Width="25" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Cursor="Hand" MouseDown="Label_MouseDown" FontSize="13" Foreground="#FF565656" />
                <Label Content="Employee ID:" Grid.Row="0" Grid.Column="2" Margin="4,0,0,0"/>
                <Label Content="Email:" Grid.Row="3" Grid.Column="2" Margin="4,0,0,0"/>
                <Label Content="Active Status:" Grid.Row="4" Grid.Column="2" Margin="4,8,0,0"/>
                <Label Content="Locked Status:" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Left" Margin="40,8,60,0"/>

                <!-- Right Column Controls -->
                <TextBox x:Name="txtUsername" Grid.Row="1" Grid.Column="3" Margin="5" IsEnabled="False" TextChanged="txtUsername_TextChanged" ToolTip="The Username is auto set, No action is needed"/>
                <Border Grid.Row="2" Grid.Column="3" Margin="5" 
        BorderBrush="#FFABADB3" 
        BorderThickness="1">
                    <Grid Background="#FFF0F0F0">
                        <PasswordBox x:Name="pwdPassword" Background="Transparent" BorderThickness="0" 
                     VerticalContentAlignment="Center" Visibility="Visible"  Password="P@ssw0rd-" IsEnabled="False" ToolTip="The employeeID is auto set, or you can random generate it" />
                        <TextBox x:Name="txtPassword" Background="Transparent" BorderThickness="0" 
                 VerticalContentAlignment="Center" Visibility="Collapsed" IsEnabled="False"  />
                        <Label FontFamily="../../icons/#Font Awesome 6 Free Solid" Content="&#xf06e;" FontSize="15" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,3,0" Foreground="#FF656262" MouseDown="TogglePasswordVisibility" Cursor="Hand" OpacityMask="#FFF0F0F0" Padding="5,2,5,2"/>
                    </Grid>
                </Border>
                <TextBox x:Name="txtEmployeeID" Grid.Row="0" Grid.Column="3" Margin="5" IsEnabled="False" ToolTip="The employeeID is auto set, No action is needed"/>
                <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="3" Margin="5" Height="20" VerticalAlignment="Top" ToolTip="The employeeID is auto set, or you can change it"/>
                <CheckBox x:Name="chkActive" Grid.Row="4" Grid.Column="2" Margin="90,15,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" IsChecked="True" ToolTip="Change the status of Active field" />
                <CheckBox x:Name="chkLocked" Grid.Row="4" Grid.Column="3" Margin="127,15,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" ToolTip="Change the status of Locked field" />

            </Grid>
            
        </GroupBox>

        <!-- Row 2 (Buttons and Search) -->
        <Grid Grid.Row="3" Margin="2,10,29,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Search Panel (Left) -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                <ComboBox x:Name="cmbSearchCategory" Width="120" Height="30" Margin="0,0,10,0" SelectionChanged="CmbSearchCategory_SelectionChanged">
                    <ComboBoxItem Content="Employee ID"/>
                    <ComboBoxItem Content="First Name"/>
                    <ComboBoxItem Content="Last Name"/>
                    <ComboBoxItem Content="Email"/>
                    <ComboBoxItem Content="Position"/>
                    <ComboBoxItem Content="Location"/>
                    <ComboBoxItem Content="Is Active"/>
                </ComboBox>
                <TextBox x:Name="txtSearch" Width="150" Height="30" TextChanged="TxtSearch_TextChanged"/>
            </StackPanel>

            <!-- Buttons Panel (Right) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnAdd" Content="Add" Width="100" Height="30" Click="BtnAdd_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnUpdate" Content="Update" Width="100" Height="30" Click="BtnUpdate_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnDelete" Content="Delete" Width="100" Height="30" Click="BtnDelete_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnRefresh" Content="Refresh" Width="100" Height="30" Click="BtnRefresh_Click"/>
            </StackPanel>
        </Grid>

        <!-- Employee List -->
        <DataGrid x:Name="dgEmployees" 
          Grid.Row="4" 
          AutoGenerateColumns="False" 
          IsReadOnly="True"
          SelectionMode="Single"
          SelectionChanged="DgEmployees_SelectionChanged"
          RowHeight="23"
          CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EmployeeID}" Width="*" MinWidth="20">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" MinWidth="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" MinWidth="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" MinWidth="145">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Position" Binding="{Binding Position.PermissionLevel}" Width="*" MinWidth="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Location" Binding="{Binding Site.SiteName}" Width="*" MinWidth="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Is active" Binding="{Binding IsActive}" Width="*" MinWidth="20">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel x:Name="stcClear" Grid.Row="2" Grid.Column="3" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            Margin="0,-34,10,0" MouseDown="BtnClear_Click"
            ToolTip="Clear Form"
            Cursor="Hand">
            
            <Label FontFamily="../../icons/#Font Awesome 6 Free Solid"
               Content="&#xf1f8;"
               Foreground="#FF565656"
               FontSize="15"/>
            <TextBlock Text="Clear Form" 
               VerticalAlignment="Center" 
               Foreground="#FF565656" Margin="0,0,0,5"/>
        </StackPanel>
    </Grid>
</UserControl>
