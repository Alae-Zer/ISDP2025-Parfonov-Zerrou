<UserControl x:Class="ISDP2025_Parfonov_Zerrou.Forms.UserControls.ViewOrders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filters -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Order Type:" VerticalAlignment="Center"/>
                <hc:ComboBox x:Name="cmbOrderType" Width="120" Margin="5,0,15,0">
                    <ComboBoxItem Content="Regular"/>
                    <ComboBoxItem Content="Emergency"/>
                    <ComboBoxItem Content="Backorder"/>
                </hc:ComboBox>

                <TextBlock Text="Status:" VerticalAlignment="Center"/>
                <hc:ComboBox x:Name="cmbStatus" Width="120" Margin="5,0">
                    <ComboBoxItem Content="Submitted"/>
                    <ComboBoxItem Content="Received"/>
                    <ComboBoxItem Content="Processing"/>
                    <ComboBoxItem Content="Ready"/>
                    <ComboBoxItem Content="In Transit"/>
                    <ComboBoxItem Content="Delivered"/>
                    <ComboBoxItem Content="Closed"/>
                    <ComboBoxItem Content="ALL"/>
                </hc:ComboBox>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1" 
                      x:Name="dgOrders"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Location" Binding="{Binding Location}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                    <DataGridTextColumn Header="Items" Binding="{Binding Items}"/>
                    <DataGridTextColumn Header="Weight (kg)" Binding="{Binding Weight}"/>
                    <DataGridTextColumn Header="Delivery Date" Binding="{Binding DeliveryDate}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10">
            <Button x:Name="btnRefresh" 
                    Content="Refresh"
                    Style="{StaticResource ButtonDefault}"
                    Margin="5,0"
                    Click="btnRefresh_Click"/>
            <Button x:Name="btnCreate" 
                    Content="Create Order"
                    Style="{StaticResource ButtonPrimary}"
                    Margin="5,0"
                    Click="btnCreate_Click"/>
            <Button x:Name="btnReceive" 
                    Content="Receive"
                    Style="{StaticResource ButtonInfo}"
                    Margin="5,0"
                    Click="btnReceive_Click"/>
            <Button x:Name="btnDelete" 
                    Content="Delete"
                    Style="{StaticResource ButtonDanger}"
                    Margin="5,0"
                    Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</UserControl>