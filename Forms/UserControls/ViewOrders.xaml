<UserControl x:Class="ISDP2025_Parfonov_Zerrou.Forms.UserControls.ViewOrders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filters -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Order Type:" VerticalAlignment="Center"/>
                <hc:ComboBox x:Name="cmbOrderType" Width="120" Margin="5,0,15,0">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Store Order"/>
                    <ComboBoxItem Content="Emergency Order"/>
                    <ComboBoxItem Content="Back Order"/>
                </hc:ComboBox>

                <TextBlock Text="Status:" VerticalAlignment="Center"/>
                <hc:ComboBox x:Name="cmbStatus" Width="120" Margin="5,0">
                    <ComboBoxItem Content="ALL"/>
                    <ComboBoxItem Content="New"/>
                    <ComboBoxItem Content="Submitted"/>
                    <ComboBoxItem Content="Received"/>
                    <ComboBoxItem Content="Processing"/>
                    <ComboBoxItem Content="Ready"/>
                    <ComboBoxItem Content="In Transit"/>
                    <ComboBoxItem Content="Delivered"/>
                    <ComboBoxItem Content="Closed"/>
                </hc:ComboBox>
                <Button x:Name="btnRefresh" 
        Content="Refresh"
        Style="{StaticResource ButtonDefault}"
        Margin="5,0"
        Click="btnRefresh_Click" HorizontalAlignment="Right" Width="77"/>
                <Grid Grid.Column="2" Margin="5,0" Height="33" HorizontalAlignment="Right" x:Name="Alert">
                    <hc:Card >
                        <hc:SimplePanel>
                            <Border Background="#c82121" CornerRadius="4">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Border.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation 
                    Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                    From="Red" To="DarkOrange" Duration="0:0:0.6" 
                    AutoReverse="True" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                            <TextBlock Text="NEW ORDER" FontSize="15" FontWeight="Bold" Foreground="White"
       HorizontalAlignment="Right" VerticalAlignment="Center" Margin="8,2,10,0" Height="23"/>
                        </hc:SimplePanel>
                    </hc:Card>
                </Grid>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1" 
                      x:Name="dgOrders"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow" SelectionChanged="dgOrders_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order ID" Binding="{Binding TxnId}" Width="Auto"/>
                    <DataGridTextColumn Header="Location" Binding="{Binding Location}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                    <DataGridTextColumn Header="Items" Binding="{Binding Items}"/>
                    <DataGridTextColumn Header="Weight (kg)" Binding="{Binding Weight}"/>
                    <DataGridTextColumn Header="Delivery Date" Binding="{Binding DeliveryDate}"/>
                    <DataGridTextColumn Header="Order Type" Binding="{Binding OrderType}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10">
            <Button x:Name="btnReceiveWarehouse" 
        Content="Receive Warehouse"
        Style="{StaticResource ButtonInfo}"
        Margin="5,0"
        Click="btnReceiveWarehouse_Click" Width="125" Background="#FF1EB79E" BorderBrush="#FF1EB79E"/>
            <Button x:Name="btnCreate" 
                    Content="Create Order"
                    Style="{StaticResource ButtonPrimary}"
                    Margin="5,0"
                    Click="btnCreate_Click"
                    Width="93">
                <Button.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="#FF245EE4"/>
                        <GradientStop Color="#FF326CF3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.BorderBrush>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="#FF4F71BF"/>
                        <GradientStop Color="#FF326CF3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
            </Button>
            <Button x:Name="btnReceive" 
                    Content="Receive store"
                    Style="{StaticResource ButtonInfo}"
                    Margin="5,0"
                    Click="btnReceive_Click" Width="97" Background="#FF00D447" BorderBrush="#FF00D447"/>
            <Button x:Name="btnEdit" 
                    Content="Edit"
                    Style="{StaticResource ButtonInfo}"
                    Margin="5,0"
                    Width="69" Click="btnEdit_Click">
                <Button.BorderBrush>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="#FFD48B33"/>
                        <GradientStop Color="#FFEC8A14" Offset="1"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
                <Button.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="#FFD48B33"/>
                        <GradientStop Color="#FFEC8A14" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>