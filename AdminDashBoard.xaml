<Window x:Class="ISDP2025_Parfonov_Zerrou.AdminDashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    Title="Dashboard - Bullseye IMS"
    Width="1200" Height="800"
    Background="#F7F7F7"
    WindowStartupLocation="CenterScreen"
    MinWidth="1200" MinHeight="800">


    <!-- Resources -->
    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#FFE8E7CC" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="2,2,2,2" Background="#FF867F7F" BorderBrush="Black" BorderThickness="1,1,1,1">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Sidebar -->
        <DockPanel>
            <StackPanel Background="#333" Width="250" DockPanel.Dock="Left" VerticalAlignment="Stretch">
                <!-- Logo -->
                <StackPanel Margin="10" VerticalAlignment="Top" Height="120">
                    <Image Source="/bullseye.jpg" Width="80" Height="80" HorizontalAlignment="Center" />
                    <TextBlock Text="Bullseye IMS" Foreground="White" FontWeight="Bold" 
                               FontSize="20" TextAlignment="Center" />
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Margin="10,10,10,86">
                    <!-- Dashboard Button -->
                    <Button Tag="DashboardPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label FontFamily="./icons/#Font Awesome 6 Free Solid" Content="&#xf0db;"  Foreground="White" Width="32" Height="30" Margin="10,0,10,0" FontSize="20" />
                            <TextBlock Text="Dashboard" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Employees Button -->
                    <Button Tag="EmployeesPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label FontFamily="./icons/#Font Awesome 6 Free Solid" Content="&#xf0c0;"  Foreground="White" Width="32" Height="30" Margin="10,0,10,0" FontSize="17" />
                            <TextBlock Text="Employees"  VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Locations Button -->
                    <Button Tag="LocationsPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label FontFamily="./icons/#Font Awesome 6 Free Solid" Content="&#xf3c5;"  Foreground="White" Width="29" Height="30" Margin="13,0,10,0" FontSize="20" />
                            <TextBlock Text="Locations"  VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Inventory Button -->
                    <Button Tag="InventoryPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label FontFamily="./icons/#Font Awesome 6 Free Solid" Content="&#xf468;"  Foreground="White" Width="32" Height="30" Margin="10,0,10,0" FontSize="20" />
                            <TextBlock Text="Inventory" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Suppliers Button -->
                    <Button Tag="SuppliersPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label FontFamily="./icons/#Font Awesome 6 Free Solid" Content="&#xf275;"  Foreground="White" Width="32" Height="30" Margin="10,0,10,0" FontSize="20" />
                            <TextBlock Text="Suppliers" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Permissions Button -->
                    <Button Tag="PermissionsPage" Height="42" Margin="0,5" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label FontFamily="./icons/#Font Awesome 6 Free Solid" Content="&#xf4ff;"  Foreground="White" Width="35" Height="30" Margin="10,0,7,0" FontSize="20" />
                            <TextBlock Text="Permissions" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Footer -->
                <DockPanel LastChildFill="True" Margin="10" VerticalAlignment="Stretch">
                    <StackPanel DockPanel.Dock="Bottom" Margin="0,20,0,0" VerticalAlignment="Bottom">
                        <!-- User Label -->
                        <TextBlock Text="Logged in as: [Current User]" Foreground="White" FontSize="14" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5" />

                        <!-- Logout Button -->
                        <Button Tag="Logout" Height="42" 
                                Style="{StaticResource SidebarButtonStyle}" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="SignOut" Foreground="White" Width="20" Height="20" Margin="10,0,10,0" />
                                <TextBlock Text="Logout" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </StackPanel>

            <!-- Main Content -->
            <Grid Background="White" Margin="0">
                <ContentControl x:Name="MainContent" />
            </Grid>
        </DockPanel>
    </Grid>

</Window>
