<UserControl x:Class="ISDP2025_Parfonov_Zerrou.Forms.AdminUserControls.EmployeesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ISDP2025_Parfonov_Zerrou.Forms.AdminUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <TextBlock Text="Employee Management" 
               FontSize="24" 
               FontWeight="Bold" 
               Margin="0,0,0,20"/>

        <!-- Employee Form -->
        <GroupBox Grid.Row="1" Header="Employee Information" Padding="10" Margin="0,0,0,10" x:Name="employeeFormGroup">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Left Column Labels -->
                <Label Content="First Name:" Grid.Row="0" Grid.Column="0"/>
                <Label Content="Last Name:" Grid.Row="1" Grid.Column="0"/>
                <Label Content="Location:" Grid.Row="3" Grid.Column="0"/>
                <Label Content="Position:" Grid.Row="2" Grid.Column="0"/>
                <Label Content="Notes:" Grid.Row="4" Grid.Column="0"/>

                <!-- Left Column Controls -->
                <TextBox x:Name="txtFirstName" Grid.Row="0" Grid.Column="1" Margin="6" TextChanged="txtFirstName_TextChanged"/>
                <TextBox x:Name="txtLastName" Grid.Row="1" Grid.Column="1" Margin="5" TextChanged="txtLastName_TextChanged" />
                <ComboBox x:Name="cmbLocation" Grid.Row="3" Grid.Column="1" Margin="5"/>
                <ComboBox x:Name="cmbPosition" Grid.Row="2" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="Notes" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" TextWrapping="Wrap" AcceptsReturn="True" Height="48" Margin="5,0,5,0"/>

                <!-- Right Column Labels -->
                <Label Content="Username:" Grid.Row="1" Grid.Column="2"/>
                <Label Content="Password:" Grid.Row="2" Grid.Column="2"/>
                <Label Content="Employee ID:" Grid.Row="0" Grid.Column="2"/>
                <Label Content="Email:" Grid.Row="3" Grid.Column="2"/>
                <Label Content="Active Status:" Grid.Row="4" Grid.Column="2"/>
                
                <!-- Right Column Controls -->
                <TextBox x:Name="txtUsername" Grid.Row="1" Grid.Column="3" Margin="5" IsEnabled="False" TextChanged="txtUsername_TextChanged"/>
                <Border Grid.Row="2" Grid.Column="3" Margin="5" 
        BorderBrush="#FFABADB3" 
        BorderThickness="1">
                    <Grid Background="#FFF0F0F0">
                        <PasswordBox x:Name="pwdPassword" Background="Transparent" BorderThickness="0" 
                     VerticalContentAlignment="Center" Visibility="Visible"  Password="P@ssw0rd-" IsEnabled="False" />
                        <TextBox x:Name="txtPassword" Background="Transparent" BorderThickness="0" 
                 VerticalContentAlignment="Center" Visibility="Collapsed" IsEnabled="False"  />
                        <Label FontFamily="../../icons/#Font Awesome 6 Free Solid" Content="&#xf06e;" FontSize="15" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,3,0" Foreground="#FF656262" MouseDown="TogglePasswordVisibility" Cursor="Hand" OpacityMask="#FFF0F0F0" Padding="5,2,5,2"/>
                    </Grid>
                </Border>
                <TextBox x:Name="txtEmployeeID" Grid.Row="0" Grid.Column="3" Margin="5" IsEnabled="False"/>
                <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="3" Margin="5" IsEnabled="False" Height="20" VerticalAlignment="Top"/>
                <CheckBox x:Name="chkActive" Grid.Row="4" Grid.Column="3" Margin="5" VerticalAlignment="Top" Content="Active"/>
            </Grid>
        </GroupBox>

        <!-- Refresh Button -->
        <!-- Refresh Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="2,10,29,10" HorizontalAlignment="Right">
            <Button x:Name="btnRefresh" Content="Refresh" Width="100" Height="30" Click="BtnRefresh_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnClear" Content="Clear" Width="100" Height="30" Click="BtnClear_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnAdd" Content="Add" Width="100" Height="30" Click="BtnAdd_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnUpdate" Content="Update" Width="100" Height="30" Click="BtnUpdate_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Employee List -->
        <DataGrid x:Name="dgEmployees" 
          Grid.Row="3" 
          AutoGenerateColumns="False" 
          IsReadOnly="True"
          SelectionMode="Single"
          SelectionChanged="DgEmployees_SelectionChanged"
          RowHeight="23"
          CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EmployeeId}" Width="*" MinWidth="20">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" MinWidth="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" MinWidth="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" MinWidth="145">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Position" Binding="{Binding Position.PermissionLevel}" Width="*" MinWidth="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Location" Binding="{Binding Site.SiteName}" Width="*" MinWidth="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Is active" Binding="{Binding IsActive}" Width="*" MinWidth="20">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="7,0,0,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
