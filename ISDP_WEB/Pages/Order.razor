@page "/order"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true">Product Catalog</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">Browse our selection of quality products.</MudText>
    <MudDivider Class="mb-4" />

    <MudGrid Spacing="4">
        @for (int i = 1; i <= 6; i++)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="3" Class="rounded-lg">
                    <MudCardMedia Image="https://via.placeholder.com/600x400?text=Product+Image" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.h5" Color="Color.Primary">Product @i</MudText>
                        <MudText Typo="Typo.subtitle1" Class="mt-1">Category</MudText>
                        <MudText Typo="Typo.body2" Class="mt-2">This is a detailed description of product @i. It explains the features and benefits of this item.</MudText>
                        <div class="d-flex align-center mt-3">
                            <MudText Typo="Typo.h6" Color="Color.Secondary">$@(19.99 + i).99</MudText>
                            <MudText Class="ml-2 pa-1" Style="color: white; background-color: #2e7d32; border-radius: 4px; font-size: 0.75rem;">In Stock</MudText>
                        </div>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true"
                                   StartIcon="@Icons.Material.Filled.ShoppingCart" Size="Size.Large" Class="py-2">
                            Add to Cart
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>