<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av" 
        x:Class="ISDP2025_Parfonov_Zerrou.AdminDashBoard"
        Title="ADMIN - Bullseye IMS"
        Width="1200" Height="800"
        Background="#F7F7F7"
        WindowStartupLocation="CenterScreen"
        MinWidth="1200" MinHeight="800" 
        Loaded="Window_Loaded">

    <!-- Resources -->
    <Window.Resources>
        <Style x:Key="RoundedActionButton" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                                CornerRadius="20"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="#FF293C3C" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="#FFEAEAEA" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation 
                                    Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" 
                                    To="Aqua" 
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation 
                                    Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" 
                                    To="#FFEAEAEA" 
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Generic Label Style -->
        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="Black" />
        </Style>

        <!-- Sidebar Label Style -->
        <Style x:Key="SidebarLabelStyle" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#FF293C3C" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="../icons/#Font Awesome 6 Free Solid" />
            <Setter Property="Margin" Value="10,0,10,0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="30" />
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#DDD"/>
            <Setter Property="VerticalGridLinesBrush" Value="#DDD"/>
        </Style>

    </Window.Resources>

    <Grid>
        <DockPanel>
            <!-- Sidebar -->
            <StackPanel Background="#333" Width="250" DockPanel.Dock="Left" VerticalAlignment="Stretch">
                <!-- Logo -->
                <StackPanel Margin="10" VerticalAlignment="Top" Height="140">
                    <Image Source="/bullseye.png" Width="126" Height="100" HorizontalAlignment="Center" Stretch="UniformToFill" />
                    <TextBlock Text="Bullseye IMS" Foreground="White" FontWeight="Bold" 
                             FontSize="20" TextAlignment="Center" Margin="0,12,0,0" />
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Margin="10,10,10,86">
                    <!-- Dashboard Button -->
                    <Button x:Name="btnDashBoard" Tag="DashboardPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}" Click="btnDashBoard_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xF0DB;" Padding="7,5,5,5" />
                            <TextBlock Text="Dashboard" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Employees Button -->
                    <Button x:Name="btnEmployees" Tag="EmployeesPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}" Click="btnEmployees_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xF0C0;" Width="35" Padding="4,5,5,5" />
                            <TextBlock Text="Employees" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Locations Button -->
                    <Button x:Name="btnLocations" Tag="LocationsPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}" Click="btnLocations_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xF3C5;" Padding="10,5,1,5" />
                            <TextBlock Text="Locations" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Inventory Button -->
                    <Button x:Name="btnInventory" Tag="InventoryPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}" Click="btnInventory_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xF468;" Padding="6,5,3,5" Margin="10,0,9,0" />
                            <TextBlock Text="Inventory" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Suppliers Button -->
                    <Button x:Name="btnSuppliers" Tag="SuppliersPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}" Click="btnSuppliers_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xF275;" Padding="7,5,2,5" />
                            <TextBlock Text="Suppliers" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Permissions Button -->
                    <Button Tag="PermissionsPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xF4FF;" Padding="9,5,0,5" Margin="10,0,10,0" Width="34" />
                            <TextBlock Text="Permissions" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Footer -->
                <DockPanel LastChildFill="True" Margin="10" VerticalAlignment="Stretch">
                    <StackPanel DockPanel.Dock="Bottom" Margin="0,20,0,0">
                        <!-- User Label -->
                        <TextBlock Text="Logged in as: [Current User]" Foreground="White" FontSize="14" 
                                 HorizontalAlignment="Center" Margin="0,0,0,5" />

                        <!-- Logout Button -->
                        <Button Tag="Logout" Height="42" 
                                Style="{StaticResource SidebarButtonStyle}" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xF2F5;" />
                                <TextBlock Text="Logout" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </StackPanel>

            <!-- Main Content Area -->
            <Grid Background="White" Margin="0">
                <!-- Header -->
                <DockPanel Background="#EAEAEA" Height="50" VerticalAlignment="Top">
                    <TextBlock Text="Current Location: [Location Name]" 
                             Foreground="#333" FontSize="16" FontWeight="Bold" 
                             VerticalAlignment="Center" Margin="10,0,0,0" DockPanel.Dock="Left" />

                    <!-- Help Button -->
                    <Button Width="32" Height="30" BorderThickness="0" Background="Transparent" 
                            HorizontalAlignment="Right" Margin="5">
                        <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xF05A;" 
                               Margin="0" Cursor="Hand"/>
                    </Button>
                </DockPanel>

                <!-- Main Content -->
                <ContentControl x:Name="MainContent" Margin="0,50,0,0">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Search and Sort Area -->
                            <RowDefinition Height="*"/>
                            <!-- DataGrid -->
                            <RowDefinition Height="Auto"/>
                            <!-- Action Buttons -->
                        </Grid.RowDefinitions>

                        <!-- Search and Sort Controls -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="Sort by:" VerticalAlignment="Center"/>
                                <ComboBox Width="150" Margin="5,0,0,0">
                                    <ComboBoxItem Content="ID"/>
                                    <ComboBoxItem Content="Name"/>
                                    <ComboBoxItem Content="Date"/>
                                </ComboBox>
                            </StackPanel>
                            <TextBox Width="200" Margin="0,0,5,0" Name="txtSearch" 
                                     VerticalAlignment="Center"/>
                            <Button Content="Search" Width="80" Height="25"/>
                        </StackPanel>

                        <!-- DataGrid -->
                        <DataGrid x:Name="dgvInformation" Grid.Row="1" Margin="10"
                                  AutoGenerateColumns="False" IsReadOnly="True"
                                  SelectionMode="Single" SelectionUnit="FullRow">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="80"/>
                                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="120"/>
                                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="120"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                                <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="120"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Action Buttons Row -->
                        <Grid Grid.Row="2" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Left - Refresh -->
                                <ColumnDefinition Width="*"/>
                                <!-- Center - Add -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Right - Edit/Delete -->
                            </Grid.ColumnDefinitions>

                            <!-- Left - Refresh Button -->
                            <Button Grid.Column="0" 
                                    Content="Refresh" 
                                    Style="{StaticResource RoundedActionButton}"
                                    Background="#228B22"/>

                            <!-- Center - Add Button -->
                            <Button Grid.Column="1" 
                                    Content="Add" 
                                    Style="{StaticResource RoundedActionButton}"
                                    Background="#4CAF50"
                                    HorizontalAlignment="Center"/>

                            <!-- Right - Edit and Delete Buttons -->
                            <StackPanel Grid.Column="2" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Right">
                                <Button Content="Edit" 
                                        Style="{StaticResource RoundedActionButton}"
                                        Background="#2196F3"/>
                                <Button Content="Delete" 
                                        Style="{StaticResource RoundedActionButton}"
                                        Background="#f44336"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ContentControl>
            </Grid>
        </DockPanel>
    </Grid>
</Window>