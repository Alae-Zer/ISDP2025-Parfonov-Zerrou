<Window x:Class="ISDP2025_Parfonov_Zerrou.WarehouseFormanDashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Bullseye IMS"
        Width="1200" Height="800"
        Background="#F7F7F7"
        WindowStartupLocation="CenterScreen"
        MinWidth="1200" MinHeight="800" Loaded="Window_Loaded">

    <!-- Resources -->
    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#FF293C3C" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="#FFEAEAEA" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <!-- Smooth color transition -->
                                <ColorAnimation 
                            Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" 
                            To="Aqua" 
                            Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <!-- Reverse back to the original color -->
                                <ColorAnimation 
                            Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" 
                            To="#FFEAEAEA" 
                            Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Generic Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FF521A9A" />
        </Style>

        <!-- Sidebar Label Style -->
        <Style x:Key="SidebarLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#FF293C3C" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="../icons/#Font Awesome 6 Free Solid" />
            <Setter Property="Margin" Value="10,0,10,0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="30" />
        </Style>


        <Style TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                        BorderThickness="0"
                        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <!-- Sidebar -->
        <DockPanel>
            <StackPanel Background="#333" Width="250" DockPanel.Dock="Left" VerticalAlignment="Stretch">
                <!-- Logo -->
                <StackPanel Margin="10" VerticalAlignment="Top" Height="140">
                    <Image Source="/bullseye.png" Width="126" Height="100" HorizontalAlignment="Center" Stretch="UniformToFill" />
                    <TextBlock Text="Bullseye IMS" Foreground="White" FontWeight="Bold" 
                               FontSize="20" TextAlignment="Center" Margin="0,12,0,0" />
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Margin="10,10,10,86">
                    <!-- Dashboard Button -->
                    <Button Tag="DashboardPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf0db;" Padding="7,5,5,5" />
                            <TextBlock Text="Dashboard" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Employees Button -->
                    <Button Tag="EmployeesPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf0c0;" Width="35" Padding="4,5,5,5" />
                            <TextBlock Text="Employees" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Locations Button -->
                    <Button Tag="LocationsPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xF3C5;" Padding="10,5,1,5" />
                            <TextBlock Text="Locations" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Inventory Button -->
                    <Button x:Name="btnEditItems" Tag="InventoryPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}" Click="btnEditItems_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf468;" Padding="6,5,3,5" Margin="10,0,9,0" />
                            <TextBlock Text="Edit Items" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Suppliers Button -->
                    <Button Tag="SuppliersPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf275;" Padding="7,5,2,5" />
                            <TextBlock Text="Suppliers" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- Permissions Button -->
                    <Button Tag="PermissionsPage" Height="41" Margin="0,9" 
                            Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf4ff;" Padding="9,5,0,5" Margin="10,0,10,0" Width="34" />
                            <TextBlock Text="Permissions" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Footer -->
                <DockPanel LastChildFill="True" Margin="10" VerticalAlignment="Stretch">
                    <StackPanel DockPanel.Dock="Bottom" Margin="0,20,0,0">
                        <!-- User Label -->
                        <TextBlock x:Name="txtLoggedUser" Text="Logged in as: [Current User]" Foreground="White" FontSize="14" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5" />

                        <!-- Logout Button -->
                        <Button Tag="Logout" Height="42" 
                                Style="{StaticResource SidebarButtonStyle}" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf2f5;" />
                                <TextBlock Text="Logout" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </StackPanel>

            <!-- Main Content -->
            <Grid Background="White" Margin="0">
                <!-- Header -->
                <DockPanel Background="#EAEAEA" Height="50" VerticalAlignment="Top">
                    <!-- Left-aligned Text -->
                    <TextBlock x:Name="txtUserLocation" Text="Current Location: [Location Name]" 
               Foreground="#333" FontSize="16" FontWeight="Bold" 
               VerticalAlignment="Center" Margin="10,0,0,0" DockPanel.Dock="Left" />


                    <!-- Help Button -->
                    <Button Width="32" Height="30" BorderThickness="0" Background="Transparent" HorizontalAlignment="Right" Margin="5">
                        <Label Style="{StaticResource SidebarLabelStyle}" Content="&#xf05a;" Margin="0" Cursor="Hand"/>
                    </Button>
                </DockPanel>


                <!-- Content -->
                <ContentControl x:Name="MainContent" Margin="0,50,0,0" />
            </Grid>
        </DockPanel>
    </Grid>
</Window>
