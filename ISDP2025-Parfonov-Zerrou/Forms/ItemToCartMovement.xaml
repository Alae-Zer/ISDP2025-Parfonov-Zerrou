<!-- ItemMovementPopup.xaml -->
<Window x:Class="ISDP2025_Parfonov_Zerrou.Forms.ItemToCartMovement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Item Movement" 
        Height="100" Width="351"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">
    <Border Background="#FF1E824C" 
            CornerRadius="5" 
            Padding="10">
        <TextBlock x:Name="txtMessage" 
                   Foreground="White" 
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="14"/>
    </Border>
</Window>