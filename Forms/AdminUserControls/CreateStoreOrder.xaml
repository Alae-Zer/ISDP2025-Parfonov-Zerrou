<UserControl x:Class="ISDP2025_Parfonov_Zerrou.Forms.AdminUserControls.CreateStoreOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Controls -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Store Selection -->
                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="Store Location:"/>
                    <hc:ComboBox x:Name="StoreComboBox" 
                                DisplayMemberPath="SiteName"
                                SelectedValuePath="SiteID"
                                Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Order Type -->
                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Text="Order Type:"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <RadioButton Content="Normal" IsChecked="True" Margin="0,0,10,0"/>
                        <RadioButton Content="Emergency"/>
                    </StackPanel>
                </StackPanel>

                <!-- Delivery Date -->
                <StackPanel Grid.Column="2" Margin="5">
                    <TextBlock Text="Delivery Date:"/>
                    <hc:DatePicker x:Name="DeliveryDatePicker" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Inventory Items -->
            <DockPanel Grid.Column="0">
                <TextBox hc:InfoElement.Placeholder="Search Inventory..."
                         hc:InfoElement.Title="Inventory Items"
                         Style="{StaticResource TextBoxExtend}"
                         Margin="0,0,0,5"
                         DockPanel.Dock="Top"/>
                <DataGrid x:Name="InventoryGrid" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ItemId}"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                        <DataGridTextColumn Header="Case Size" Binding="{Binding CaseSize}"/>
                        <DataGridTextColumn Header="Reorder Level" Binding="{Binding ReorderThreshold}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>

            <!-- Transfer Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10">
                <Button x:Name="btnAdd" Content=">" 
                        Style="{StaticResource ButtonPrimary}"
                        Margin="5" Click="btnAdd_Click"/>
                <Button x:Name="btnRemove" Content="y" 
                        Style="{StaticResource ButtonPrimary}"
                        Margin="5"
                        Click="btnRemove_Click"/>
            </StackPanel>

            <!-- Order Items -->
            <DockPanel Grid.Column="2">
                <TextBox hc:InfoElement.Placeholder="Search Order..."
                         hc:InfoElement.Title="Order Items"
                         Style="{StaticResource TextBoxExtend}"
                         Margin="0,0,0,5"
                         DockPanel.Dock="Top"/>
                <DataGrid x:Name="OrderGrid" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ItemId}"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                        <DataGridTemplateColumn Header="Quantity">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <hc:NumericUpDown Value="{Binding Quantity}"
                                                     Minimum="0"
                                                     Increment="{Binding CaseSize}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Case Size" Binding="{Binding CaseSize}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Grid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button x:Name="btnRefresh" Content="Refresh" 
                    Style="{StaticResource ButtonDefault}"
                    Margin="5,0"
                    Click="btnRefresh_Click"/>
            <Button x:Name="btnSubmit" Content="Submit" 
                    Style="{StaticResource ButtonPrimary}" Click="btnSubmit_Click"/>
        </StackPanel>
    </Grid>
</UserControl>